<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
        point="org.eclipse.emf.validation.constraintBindings">
     <clientContext
           default="true"
           id="org.eclipse.papyrus.opcua.validation.context">
        <selector
              class="org.eclipse.papyrus.opcua.validation.util.ValidationClientSelector">
        </selector>
     </clientContext>
     <binding
           category="org.eclipse.papyrus.opcua.validation"
           context="org.eclipse.papyrus.opcua.validation.context">
        <category
              ref="org.eclipse.papyrus.opcua.validation">
        </category>
     </binding>
  </extension>
  <extension
        point="org.eclipse.emf.validation.constraintProviders">
     <category
           id="org.eclipse.papyrus.opcua.validation"
           name="OPC-UA Validation">
     </category>
     <constraintProvider
           cache="true">
        <package
              namespaceUri="http://unicase.org/model/task">
        </package>
        <constraints
              categories="org.eclipse.papyrus.opcua.validation">
           <constraint
                 class="org.eclipse.papyrus.opcua.validation.constraints.NamespaceSetConstraint"
                 id="org.eclipse.papyrus.opcua.validation.constraints.NamespaceSet"
                 isEnabledByDefault="true"
                 lang="Java"
                 mode="Batch"
                 name="Class inside Namespace"
                 severity="ERROR"
                 statusCode="1">
              <message>
                 {0} is in not contained in any namespace.
              </message>
           </constraint>
        </constraints>
     </constraintProvider>
</extension>
</plugin>
